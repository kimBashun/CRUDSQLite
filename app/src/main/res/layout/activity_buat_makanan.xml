<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.restoran.BuatMakanan"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="vertical"
        android:layout_weight="0.07">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Makanan"
                android:inputType="text"
                android:maxLength="20" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.65"
            android:text="Opsi"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/rgJenisPil"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:layout_weight="0.22">

            <RadioButton
                android:id="@+id/rbBungkus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bungkus" />

            <RadioButton
                android:id="@+id/rbTempat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Di Tempat" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/textpesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Jumlah Pesan"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/rgPesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="3" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="4" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnKembali"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editText5"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/editText5"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="Kembali" />

        <Button
            android:id="@+id/btnSimpan"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText5"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="Simpan" />
    </LinearLayout>

</LinearLayout>
